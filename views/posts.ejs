<%- include('partials/header') %>

<h1 class="page-title d-flex justify-content-center">Welcome, <%= user.firstName %>!</h1>
<div class="text-center m-5">
  <a class="btn btn-dark" href="/posts/new">Create Post</a>
</div>
<div class="post-list text-center">
  <% if (posts) { %> <% posts.forEach(post => { %>
  <div class="card preview">
    <div class="card-body">
      <div>
        <img class="card-img-top" src="/images/image-holder-icon.png" alt="Card image cap" />
      </div>
      <h5 class="card-title"><%= post.title %></h5>
      <h6 class="card-subtitle mb-2 text-muted">By: <%= post.author.username %></h6>
      <p class="card-text"><%= post.content %></p>
      <a class="card-link btn btn-outline-dark" href="/posts/<%= post.slug%>/<%= post._id%>">Read More</a>
    </div>
  </div>
  <% }) %> <% } %>
</div>

<%- include('partials/footer') %>
